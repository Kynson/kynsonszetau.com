---
interface Props {
  'closing-remarks': string;
  title?: string;
  'html-class'?: string;
  'body-class'?: string;
  'header-class'?: string;
  'main-class'?: string;
}

import Head from '../components/Head.astro';
import Footer from '../components/Footer.astro';

const {
  'closing-remarks': closingRemarks,
  title,
  'html-class': htmlClass,
  'body-class': bodyClass,
  'header-class': headerClass,
  'main-class': mainClass,
} = Astro.props;
---

<!doctype html>
<html
  lang="en"
  class="bg-gray-950 text-blue-50 min-h-dvh"
  class:list={htmlClass}
>
  <Head {title} />
  <body class:list={['min-h-dvh', bodyClass]}>
    <!-- <slot /> -->
    <header class:list={headerClass}>
      <slot name="header" />
    </header>
    <main class:list={mainClass}>
      <slot />
      {
        /* Putting Footer in main as there is clsing remarks that related to the content in main */
      }
      <Footer closing-remarks={closingRemarks} />
    </main>
  </body>
</html>
