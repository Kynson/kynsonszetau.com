---
import BaseLayout from './BaseLayout.astro';
---

{/* MainLayout content */}
<BaseLayout
  closing-remarks="That's it! Thanks for visiting!"
  html-class="scroll-smooth"
  body-class="px-6 pt-8 grid grid-cols-2 grid-rows-[min-content_auto] md:gap-x-14 md:px-0 md:py-0 md:pl-6 md:h-dvh md:grid-cols-[min-content_auto] md:grid-rows-3"
  header-class="col-span-2 grid grid-cols-subgrid md:col-span-1 md:grid-rows-subgrid md:row-span-3 md:justify-items-center md:py-10"
  main-class="max-w-screen-xl col-span-2 w-full justify-self-center md:scroll-smooth md:pl-4 md:pr-8 md:col-start-2 md:h-dvh md:overflow-y-scroll md:text-clip"
>
  {/* Transfer the slotted element to BaseLayout */}
  <slot name="header" slot="header" />
  <slot />
</BaseLayout>
