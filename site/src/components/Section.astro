---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'section'> {
  title?: string;
  id?: string;
  'section-number'?: string;
  'with-header'?: boolean;
}

const {
  title,
  id = title?.toLowerCase(),
  'section-number': sectionNumber,
  'with-header': withHeader = true,
  class: clazz,
  ...attributes
} = Astro.props;
---

<section {id} class:list={['min-h-dvh', clazz]} {...attributes}>
  {
    withHeader && (
      <header class="mb-12">
        <p class="font-mono text-blue-300">{sectionNumber}</p>
        <h1 class="text-2xl">{title}</h1>
      </header>
    )
  }
  <slot />
</section>
