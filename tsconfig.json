{
  "compilerOptions": {
    "baseUrl": ".",
    "checkJs": true,
    "target": "ESNext",
    // If the path alias(es) below is/are changed,
		// please also update the `alias` property in snowpack.config.mjs
    "paths": {
      "@components/*": ["src/components/*"],
      "@stores/*": ["src/stores/*"]
    }
  },
  "extends": "@tsconfig/svelte/tsconfig.json",
  "exclude": [
    "node_modules",
    "tailwind.config.js",
    "postcss.config.js",
    "routify.config.js",
    "public/*"
  ]
}