---
import BaseLayout from './BaseLayout.astro';
---

<!-- MainLayout Content -->
<BaseLayout extraClasses="md:h-dvh grid grid-cols-1 grid-rows-[min-content_auto] gap-x-14 md:grid-cols-[min-content_auto] md:grid-rows-3">
  <nav class="md:row-span-2 md:grid md:grid-rows-subgrid md:items-center md:justify-items-center">
    <slot name="nav" />
  </nav>
  <main class="md:h-dvh md:overflow-y-scroll md:px-0 md:text-clip">
    <slot />
  </main>
</BaseLayout>