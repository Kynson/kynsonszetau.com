---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'textarea'> {
  label: string;
  errorMessage?: string;
}

const { label, class: clazz = '', errorMessage = '', ...attributes } = Astro.props;
---
<!-- mb-7 user-invalid:mb-0 -->
<label class:list={['inline-flex flex-col gap-2', clazz]}>
  <span>{label}</span>
  <textarea class="peer rounded-lg bg-gray-900 transition-border mb-5 focus:border-blue-50 user-invalid:mb-0" name={label.toLowerCase()} {...attributes} />
  <span class="hidden leading-3 text-xs peer-user-invalid:block">{errorMessage}</span>
</label>